@page "/"

@inject WeatherApiService WeatherService

<h3>Weather Forecast</h3> 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wHik2sRDMyZ6KEGcObz56OM2fdl6UG+1y3XtwfCj7Iv1REHci1N7LNYJg9gjM2Kx" crossorigin="anonymous">

@code {
    private string weatherData;

    private async Task FetchWeatherData()
    {
        try
        {
            weatherData = await WeatherService.GetWeatherForecastAsync("London", 4, DateTime.Parse("2023-12-12"));
            Console.WriteLine(weatherData);
        }
        catch (Exception ex)
        {
            // Handle exceptions
            Console.WriteLine($"Error: {ex.Message}");
        }
    }
}

<button @onclick="FetchWeatherData">Fetch Weather Data</button>
